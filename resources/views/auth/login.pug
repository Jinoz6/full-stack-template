
extends layout

block content

    
    .container-justify
    main.main-content.mt-0.ps
    .page-header.align-items-start.min-vh-100
      .container.my-auto
        .row
          .col-lg-4.col-md-8.col-12.mx-auto
            .card.z-index-0.fadeIn3.fadeInBottom
              .card-header.p-0.position-relative.mt-n4.mx-3.z-index-2
                .bg-gradient-primary.shadow.border-radius-lg.py-3.pe-1
                  h4.text-white.font-weight-bolder.text-center.mt-2.mb-0 Lao - Asean Hospital
                  .row.mt-3
                    .col-2.text-center.ms-auto
                      a.btn.btn-link.px-3
                        i.fa.fa-facebook.text-white.text-lg(aria-hidden='true')
                    .col-2.text-center.px-1
                      a.btn.btn-link.px-3
                        i.fa.fa-github.text-white.text-lg(aria-hidden='true')
                    .col-2.text-center.me-auto
                      a.btn.btn-link.px-3
                        i.fa.fa-google.text-white.text-lg(aria-hidden='true')
              .card-body
                form.text-start(role='form')
                  .input-group.input-group-outline.my-3
                    input.form-control(type='email' placeholder='Email')
                  .input-group.input-group-outline.mb-3
                    input.form-control(type='password' placeholder='Password')
                  .text-center
                    button.btn.bg-gradient-primary.shadow.w-100.my-4.mb-2(type='button') Sign in
                  p.mt-4.text-sm.text-center
                    | Don&apos;t have an account?
                    a(href='register' text-gradient='')  Sign up
    


    script(src="/javascripts/components/auth/login.js")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous")